{
    "workbench.colorTheme": "Monokai",
    "workbench.colorCustomizations": {
        "editor.background": "#000000",
        "sideBar.background": "#111111",
        "tab.activeBackground": "#555",
        "tab.inactiveBackground": "#111"
    },
    "editor.accessibilitySupport": "off",
    "editor.bracketPairColorization.enabled": true,
    "editor.guides.bracketPairs": "active",
    "editor.linkedEditing": true,
    "editor.minimap.enabled": false,
    "editor.formatOnSave": true,
    "window.title": "${rootName} - ${activeEditorLong}",
    "html.format.wrapLineLength": 240,
    "git.confirmSync": false,
    "files.autoSave": "afterDelay",
    "files.eol": "\n",
    "files.exclude": {
        "**/.git": true,
        "**/.gitignore": true,
        "**/.svn": true,
        "**/.hg": true,
        "**/CVS": true,
        "**/.DS_Store": true,
        "**/__pycache__/": true,
        "**/*.pyo": true,
        "**/venv": true,
        "**/.vscode": true
    },
    "search.exclude": {
        "**/node_modules": true,
        "**/bower_components": true
    },
    "git.autofetch": true,
    "git.enableSmartCommit": true,
    "extensions.ignoreRecommendations": true,
    "terminal.integrated.scrollback": 10000,
    "terminal.integrated.fontFamily": "Courier New",
    "terminal.integrated.fontSize": 14,
    "terminal.integrated.fontWeight": "bold",
    "terminal.integrated.defaultProfile.windows": "PowerShell",
    "[yaml]": {
        "editor.tabSize": 2
    },
    "workbench.iconTheme": "vscode-icons",
    "breadcrumbs.enabled": false,
    "explorer.compactFolders": false,
    "python.terminal.executeInFileDir": true,
    "[python]": {
        "editor.defaultFormatter": "ms-python.autopep8",
        "editor.formatOnSave": true
    },
    "autopep8.args": [
        "--max-line-length",
        "200"
    ],
    "pylint.args": [
        "--disable=C0103,C0111,C0114,C0301,C0410",
        "--max-line-length=200"
        // "--load-plugins=pylint_django",
        // "--errors-only",
    ],
    "C_Cpp.clang_format_fallbackStyle": "{BasedOnStyle: Google, IndentWidth: 4, ColumnLimit: 0}",
    "terminal.integrated.defaultProfile.linux": "bash",
    "hediet.vscode-drawio.resizeImages": null,
    "hediet.vscode-drawio.theme": "dark",
    "security.workspace.trust.untrustedFiles": "open",
    "azureFunctions.showPythonVenvWarning": false,
    "editor.accessibilitySupport": "on",
    "window.zoomLevel": 1
}
