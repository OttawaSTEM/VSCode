{
    "workbench.colorTheme": "Monokai",
    "workbench.colorCustomizations": {
        "editor.background": "#000000",
        "sideBar.background": "#181818",
        "tab.activeBackground": "#555",
        "tab.inactiveBackground": "#111"
    },
    "editor.accessibilitySupport": "off",
    "editor.bracketPairColorization.enabled": true,
    "editor.guides.bracketPairs": "active",
    "editor.linkedEditing": true,
    "editor.minimap.enabled": false,
    "editor.formatOnSave": true,
    "breadcrumbs.enabled": false,
    "window.title": "${activeEditorLong}",
    "window.titleBarStyle": "native",
    "html.format.wrapLineLength": 240,
    "workbench.activityBar.visible": false,
    "git.confirmSync": false,
    "files.autoSave": "afterDelay",
    "files.eol": "\n",
    "files.exclude": {
        "**/.git": true,
        "**/.gitignore": true,
        "**/.svn": true,
        "**/.hg": true,
        "**/CVS": true,
        "**/.DS_Store": true,
        "**/__pycache__/": true,
        "**/*.pyo": true,
        "**/venv": true,
        "**/.vscode": true
    },
    "files.associations": {
        "*.hcl": "terraform"
    },
    "search.exclude": {
        "**/node_modules": true,
        "**/bower_components": true
    },
    "git.autofetch": true,
    "window.zoomLevel": 1,
    "git.enableSmartCommit": true,
    "extensions.ignoreRecommendations": true,
    "terminal.integrated.scrollback": 10000,
    "terminal.integrated.fontFamily": "Courier New",
    "terminal.integrated.fontSize": 14,
    "terminal.integrated.fontWeight": "bold",
    "terminal.integrated.defaultProfile.osx": "zsh",
    "[yaml]": {
        "editor.tabSize": 2
    },
    "workbench.iconTheme": "vscode-icons",
    "explorer.compactFolders": false,
    "python.terminal.executeInFileDir": true,
    "[python]": {
        "editor.defaultFormatter": "ms-python.autopep8",
        "editor.formatOnSave": true
    },
    "autopep8.args": [
        "--max-line-length",
        "200"
    ],
    "pylint.args": [
        "--disable=C0103,C0111,C0114,C0301,C0410",
        "--max-line-length=200"
        // "--load-plugins=pylint_django",
        // "--errors-only",
    ],
    "C_Cpp.clang_format_fallbackStyle": "{BasedOnStyle: Google, IndentWidth: 4, ColumnLimit: 1000}",
    "vsicons.dontShowNewVersionMessage": true,
    "[dart]": {
        "editor.formatOnSave": true,
        "editor.formatOnType": true,
        "editor.rulers": [
            240
        ],
        "editor.selectionHighlight": false,
        "editor.suggest.snippetsPreventQuickSuggestions": false,
        "editor.suggestSelection": "first",
        "editor.tabCompletion": "onlySnippets",
        "editor.wordBasedSuggestions": false
    }
}
